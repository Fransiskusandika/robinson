            <div>
                <label for="type">Tip aranžmana:</label>
                <?=$this->tag->selectStatic(
                    array(
                        'type',
                        array(
                            1 => 'Apartmani',
                            2 => 'Hoteli',
                        ),
                        'useEmpty' => true,
                        'emptyText' => 'Sve',
                        'id' => 'packages-selector',
                    )
                ) . PHP_EOL;
                ?>
            </div>

